/* components/searchbar/searchbar.wxss */
.container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 0 0 40px;
  height: 40px;
}

.button {
  flex: 0 0 100rpx;
  background-color: mistyrose;
  font-size: 14px;
}

.input {
  flex-grow: 1;
  background-color: white;
  height: 30px;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 5px;
}

.clear {
  position: absolute;
  right: 15px;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  /* background-color: red; */
  z-index: 100;
}

.filter-card {
  position: fixed;
  width: 70%;
  height: 50%;
  right: 0;
  top: 40px;
  border-radius: 10px;
  background-color: white;
}
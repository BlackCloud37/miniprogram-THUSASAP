/* components/listitem/listitem.wxss */
.container {
  display: flex;
  height: 120rpx;
}

.nav {
  display: flex;
  flex-grow: 1;
  border-top: rgba(133, 116, 28, 0.2) solid 2rpx;
  align-items: center;
}

.listitemavatar {
  border-radius: 50%;
  margin: 10rpx 30rpx 10rpx 30rpx;
  height: 100rpx;
  width: 100rpx;
  overflow: hidden;
}

text {
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 18px;
  font-family: sans-serif;
  flex-basis: 4em;
  color: #803806;
}

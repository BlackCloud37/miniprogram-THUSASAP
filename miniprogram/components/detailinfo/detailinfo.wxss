.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textview {
  align-self: flex-start;
  margin-left: 28px;
  margin-right: 28px;
  font-family: sans-serif;
  font-size: 16px;
  margin-top: 0.5em;
  color: #987C1B;
}

.titletext {
  font-weight: bold;
  color: #803806;
}

.coverimg {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 1em;
}

image {
  object-fit: cover;
}